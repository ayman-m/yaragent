apiVersion: 1

groups:
  - orgId: 1
    name: YARAgent Alerts
    folder: YARAgent
    interval: 1m
    rules:
      - uid: yaragent-agent-heartbeat-missing
        title: Agent Telemetry Missing
        condition: C
        data:
          - refId: A
            datasourceUid: loki
            relativeTimeRange:
              from: 600
              to: 0
            model:
              datasource:
                type: loki
                uid: loki
              editorMode: code
              expr: sum(count_over_time({service="yaragent-agent-poc",event_type="agent.heartbeat.sent"}[10m]))
              intervalMs: 1000
              maxDataPoints: 43200
              queryType: instant
              refId: A
          - refId: C
            datasourceUid: __expr__
            relativeTimeRange:
              from: 0
              to: 0
            model:
              conditions:
                - evaluator:
                    params: [1]
                    type: lt
                  operator:
                    type: and
                  query:
                    params: [A]
                  reducer:
                    params: []
                    type: last
                  type: query
              datasource:
                type: __expr__
                uid: __expr__
              expression: A
              intervalMs: 1000
              maxDataPoints: 43200
              refId: C
              type: threshold
        noDataState: Alerting
        execErrState: Error
        for: 3m
        annotations:
          summary: No agent heartbeat telemetry in the last 10m.
        labels:
          severity: warning

      - uid: yaragent-error-spike
        title: Agent Error Spike
        condition: C
        data:
          - refId: A
            datasourceUid: loki
            relativeTimeRange:
              from: 300
              to: 0
            model:
              datasource:
                type: loki
                uid: loki
              editorMode: code
              expr: sum(count_over_time({service="yaragent-agent-poc",severity="error"}[5m]))
              intervalMs: 1000
              maxDataPoints: 43200
              queryType: instant
              refId: A
          - refId: C
            datasourceUid: __expr__
            relativeTimeRange:
              from: 0
              to: 0
            model:
              conditions:
                - evaluator:
                    params: [5]
                    type: gt
                  operator:
                    type: and
                  query:
                    params: [A]
                  reducer:
                    params: []
                    type: last
                  type: query
              datasource:
                type: __expr__
                uid: __expr__
              expression: A
              intervalMs: 1000
              maxDataPoints: 43200
              refId: C
              type: threshold
        noDataState: NoData
        execErrState: Error
        for: 2m
        annotations:
          summary: More than 5 error telemetry events in the last 5m.
        labels:
          severity: warning

      - uid: yaragent-finding-spike
        title: Finding Spike
        condition: C
        data:
          - refId: A
            datasourceUid: loki
            relativeTimeRange:
              from: 300
              to: 0
            model:
              datasource:
                type: loki
                uid: loki
              editorMode: code
              expr: sum(count_over_time({service="yaragent-agent-poc",event_type="scan.finding"}[5m]))
              intervalMs: 1000
              maxDataPoints: 43200
              queryType: instant
              refId: A
          - refId: C
            datasourceUid: __expr__
            relativeTimeRange:
              from: 0
              to: 0
            model:
              conditions:
                - evaluator:
                    params: [10]
                    type: gt
                  operator:
                    type: and
                  query:
                    params: [A]
                  reducer:
                    params: []
                    type: last
                  type: query
              datasource:
                type: __expr__
                uid: __expr__
              expression: A
              intervalMs: 1000
              maxDataPoints: 43200
              refId: C
              type: threshold
        noDataState: NoData
        execErrState: Error
        for: 2m
        annotations:
          summary: More than 10 findings in the last 5m.
        labels:
          severity: critical
