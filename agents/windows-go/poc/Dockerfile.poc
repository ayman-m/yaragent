FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY agents/windows-go/poc/main.go .
COPY agents/windows-go/poc/compile_stub.go .
COPY agents/windows-go/poc/go.mod .
COPY agents/windows-go/poc/go.sum . || true
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -o agent-poc

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /app/agent-poc .
ENTRYPOINT ["/app/agent-poc"]
CMD ["--url", "ws://localhost:8000/agent/ws"]
